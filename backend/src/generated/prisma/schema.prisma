generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  leads Lead[]
}

enum LeadSource {
  website
  facebook_ads
  google_ads
  referral
  events
  other
}

enum LeadStatus {
  new
  contacted
  qualified
  lost
  won
}

model Lead {
  id               String     @id @default(cuid())
  first_name       String
  last_name        String
  email            String     @unique
  phone            String?
  company          String?
  city             String?
  state            String?
  source           LeadSource
  status           LeadStatus @default(new)
  score            Int        @default(0)
  lead_value       Float      @default(0)
  last_activity_at DateTime?
  is_qualified     Boolean    @default(false)
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")

  ownerId String? @map("owner_id")
  owner   User?   @relation(fields: [ownerId], references: [id])

  @@index([status])
  @@index([source])
  @@index([createdAt])
}
